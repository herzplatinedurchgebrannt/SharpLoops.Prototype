    <Grid Width="Auto" Height="Auto" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="63*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Width="50">
            <Button x:Name="patternTempoUp" Content="+"/>
            <TextBox x:Name="patternBox" Text="1" Background="Black" Foreground="White" TextAlignment="Center" />
            <Button x:Name="patternTempoDown" Content="-"/>
            <Label x:Name="labelPattern" Content="PATTERN" Foreground="#FF8C8C8C" FontSize="10" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" Width="50">
            <Button x:Name="buttonTempoUp" Content="+" />
            <TextBox x:Name="tempoBox" Text="120" Background="Black" Foreground="White" KeyDown="OnKeyDownHandler" TextAlignment="Right"/>
            <Button x:Name="buttonTempoDown" Content="-"/>
            <Label x:Name="labelTempo" Content="TEMPO" Foreground="#FF8C8C8C" FontSize="10" HorizontalAlignment="Center"/>
        </StackPanel>



        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <StackPanel >
                <Button x:Name="buttonPattern1" Content="1" Background="DarkRed"  Foreground="White" Height="20" Width="20"/>
                <Button x:Name="buttonPattern2" Content="2" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
                <Button x:Name="buttonPattern3" Content="3" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="buttonPattern4" Content="4" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
                <Button x:Name="buttonPattern5" Content="5" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
                <Button x:Name="buttonPattern6" Content="6" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
            </StackPanel>
            <StackPanel>
