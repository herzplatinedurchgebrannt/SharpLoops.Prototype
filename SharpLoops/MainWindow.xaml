                <Button x:Name="buttonPattern8" Content="8" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
                <Button x:Name="buttonPattern9" Content="9" Background="DarkGray" Foreground="White" Height="20" Width="20"/>
            </StackPanel>
        </StackPanel>



        <Label Grid.Column="0" Foreground="White" Margin="0,76,0,0" Grid.RowSpan="2"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30" Grid.RowSpan="2" Width="Auto" >
