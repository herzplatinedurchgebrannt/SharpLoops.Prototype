<Window x:Class="SharpLoops.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpLoops"
        mc:Ignorable="d"
        Title="SharpLoops" 
        Height="450" 
        Width="800" 
        Background="#FF5A2873"
        WindowStartupLocation="CenterOwner"
        >
    <Grid Width="400" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Foreground="White"></Label>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Height="20" >
            <Label Name="label_00_00" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_01" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_02" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_03" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_04" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_05" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_06" Width="30" Margin="2" Background="LightGreen" ></Label>
            <Label Name="label_00_07" Width="30" Margin="2" Background="LightGreen" ></Label>

        </StackPanel>


        <Label Grid.Row="1" Foreground="White">Kick</Label>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Height="30" >
            <Button Name="button_00_00" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_01" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_02" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_03" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_04" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_05" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_06" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_00_07" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
        </StackPanel>

        <Label Grid.Row="2" Foreground="White">Snare</Label>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Height="30" >
            <Button Name="button_01_00" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_01" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_02" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_03" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_04" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_05" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_06" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_01_07" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
        </StackPanel>

        <Label Grid.Row="3" Foreground="White">Hihat</Label>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Height="30" >
            <Button Name="button_02_00" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_01" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_02" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_03" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_04" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_05" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_06" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_02_07" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
        </StackPanel>

        <Label Grid.Row="4" Foreground="White">Crash</Label>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Height="30" >
            <Button Name="button_03_00" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_01" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_02" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_03" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_04" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_05" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_06" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
            <Button Name="button_03_07" Width="30" Margin="2" Background="LightGreen" Click="ButtonClick"></Button>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Height="30">
            <Button Name="buttonPlay" Width="50" Margin="5" Background="#FF38343A" BorderBrush="Black" Foreground="White" Click="PlayButtonClick">Play</Button>
            <Button Name="buttonStop" Width="50" Margin="5" Background="#FF38343A" BorderBrush="Black" Foreground="White">Stop</Button>
            <Button Name="buttonTest" Width="50" Margin="5" Background="#FF38343A" BorderBrush="Black" Foreground="White">Test</Button>
        </StackPanel>
    </Grid>
</Window>
